{
  "name": "extra-clarity",
  "version": "18.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:extra-clarity": "ng build extra-clarity",
    "watch": "ng build --watch --configuration development",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "build:storybook": "ng run extra-clarity:build-storybook",
    "serve:storybook": "ng run extra-clarity:storybook --no-open",
    "docs:extra-clarity": "npx compodoc -e json -d . -p tsconfig.doc.json --minimal --disableLifeCycleHooks --disablePrivate --disableProtected",
    "release": "release-it",
    "release-notes": "npx conventional-changelog-cli -k ./projects/extra-clarity/package.json -r 1 --skip-unstable -t v -p conventionalcommits -n ./.release-notes.github.json",
    "prettier": "npx prettier --write .",
    "prepare": "husky || true"
  },
  "lint-staged": {
    "*.{html,ts,js,mjs,mdx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,scss}": [
      "prettier --write"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "19.2.3",
    "@angular/cdk": "19.2.6",
    "@angular/common": "19.2.3",
    "@angular/compiler": "19.2.3",
    "@angular/core": "19.2.3",
    "@angular/forms": "19.2.3",
    "@angular/platform-browser": "19.2.3",
    "@angular/platform-browser-dynamic": "19.2.3",
    "@angular/router": "19.2.3",
    "@cds/core": "6.15.1",
    "@clr/angular": "17.8.1",
    "@clr/ui": "17.8.1",
    "rxjs": "7.8.2",
    "tslib": "2.8.1",
    "zone.js": "0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "19.2.4",
    "@angular-eslint/builder": "19.3.0",
    "@angular-eslint/eslint-plugin": "19.3.0",
    "@angular-eslint/eslint-plugin-template": "19.3.0",
    "@angular-eslint/schematics": "19.3.0",
    "@angular-eslint/template-parser": "19.3.0",
    "@angular/cli": "19.2.4",
    "@angular/compiler-cli": "19.2.3",
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@compodoc/compodoc": "1.1.26",
    "@release-it/bumper": "7.0.2",
    "@release-it/conventional-changelog": "10.0.0",
    "@storybook/addon-essentials": "8.6.8",
    "@storybook/addon-interactions": "8.6.8",
    "@storybook/addon-links": "8.6.8",
    "@storybook/angular": "8.6.8",
    "@storybook/blocks": "8.6.8",
    "@storybook/manager-api": "8.6.8",
    "@storybook/theming": "8.6.8",
    "@types/mdx": "2.0.13",
    "@typescript-eslint/eslint-plugin": "8.27.0",
    "@typescript-eslint/parser": "8.27.0",
    "conventional-changelog-cli": "5.0.0",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-storybook": "0.11.6",
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "ng-packagr": "19.2.0",
    "prettier": "3.5.3",
    "release-it": "18.1.2",
    "storybook": "8.6.8",
    "typescript": "5.8.2"
  }
}
